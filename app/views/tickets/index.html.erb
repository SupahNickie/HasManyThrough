<h1>Listing tickets</h1>

<table>
  <thead>
    <tr>
      <th>Violation</th>
      <th>Cop Name</th>
      <th>Victim Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.violation %></td>
        <td><%= ticket.cop.name %></td>
        <td><%= ticket.victim.name %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %><br>
<%= link_to 'New Cop', new_cop_path %><br>
<%= link_to 'New Victim', new_victim_path %>
